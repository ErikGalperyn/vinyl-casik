# Backend configuration
PORT=4001
HOST=0.0.0.0

# Database: SQLite (default) or PostgreSQL
# Set DATABASE_TYPE=postgres to use PostgreSQL
DATABASE_TYPE=sqlite

# PostgreSQL Configuration (only needed if DATABASE_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=medioteka_user
DB_PASSWORD=medioteka_password
DB_NAME=medioteka_db

# Spotify API Configuration
# Get credentials from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# JWT Secret (change this in production!)
JWT_SECRET=medioteka-secret-key-2025

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
